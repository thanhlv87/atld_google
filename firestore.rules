rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // === HÀM HỖ TRỢ ===
    function isAdmin() {
      return exists(/databases/$(database)/documents/admins/$(request.auth.uid));
    }

    function isAuthenticated() {
      return request.auth != null;
    }

    // === YÊU CẦU HUẤN LUYỆN ===
    match /trainingRequests/{requestId} {
      allow create: if true;  // Ai cũng tạo được (public form)
      allow read: if true;  // AI CŨNG ĐỌC ĐƯỢC (thông tin liên hệ ẩn ở UI level)
      allow update: if isAuthenticated();  // Authenticated users update được
      allow delete: if isAdmin();  // Chỉ admin xóa được
    }

    // === HỒ SƠ ĐỐI TÁC ===
    match /partners/{partnerId} {
      allow create: if isAuthenticated() && request.auth.uid == partnerId;
      // Allow public read ONLY for email notification purpose (query approved partners)
      allow read: if true;  // Cho phép đọc để tìm partners gửi email
      allow update: if isAuthenticated() && (request.auth.uid == partnerId || isAdmin());
      allow delete: if isAdmin();
    }

    // === BÁO GIÁ ===
    match /quotes/{quoteId} {
      // Partner tạo báo giá
      allow create: if isAuthenticated()
                    && request.resource.data.partnerId == request.auth.uid;

      // Partner xem và update báo giá của mình
      allow read, update: if isAuthenticated()
                          && resource.data.partnerId == request.auth.uid;

      // Admin xem tất cả báo giá
      allow read: if isAdmin();

      // Partner xóa báo giá của mình
      allow delete: if isAuthenticated()
                    && resource.data.partnerId == request.auth.uid;
    }

    // === TÀI LIỆU ===
    match /documents/{docId} {
      allow read: if true;  // Ai cũng đọc được
      allow create, update, delete: if isAdmin();  // Chỉ admin quản lý
    }

    // === ADMIN COLLECTION ===
    match /admins/{adminId} {
      // Cho phép user kiểm tra xem mình có phải admin không
      allow get: if isAuthenticated() && request.auth.uid == adminId;
      // Không cho list, create, update, delete từ client
      allow list, write: if false;
    }

    // === EMAIL COLLECTION (cho Firebase Extension) ===
    match /mail/{mailId} {
      allow create: if true;  // Ai cũng tạo được (để send email)
      allow read, update, delete: if false;  // Chỉ extension xử lý
    }

    // === USERS COLLECTION (optional) ===
    match /users/{userId} {
      allow read, write: if isAuthenticated() && request.auth.uid == userId;
    }

    // === CHAT ROOMS ===
    match /chatRooms/{roomId} {
      // Users can read rooms they are part of (client or partner)
      allow read: if isAuthenticated() &&
                  (resource.data.clientId == request.auth.uid ||
                   resource.data.partnerId == request.auth.uid ||
                   isAdmin());

      // Only authenticated users can create rooms
      allow create: if isAuthenticated();

      // Only participants can update room (last message, unread count)
      allow update: if isAuthenticated() &&
                    (resource.data.clientId == request.auth.uid ||
                     resource.data.partnerId == request.auth.uid ||
                     isAdmin());

      // Only admin can delete rooms
      allow delete: if isAdmin();
    }

    // === CHAT MESSAGES ===
    match /chatMessages/{messageId} {
      // Users can read messages in rooms they are part of
      allow read: if isAuthenticated();

      // Authenticated users can create messages
      allow create: if isAuthenticated() &&
                    request.resource.data.senderId == request.auth.uid;

      // Only message sender can update (e.g., mark as read)
      allow update: if isAuthenticated();

      // Only admin can delete messages
      allow delete: if isAdmin();
    }

    // === BLOG POSTS ===
    match /blogPosts/{postId} {
      // Anyone can read published posts
      allow read: if resource.data.published == true || isAdmin();

      // Only admins can create, update, delete posts
      allow create, update, delete: if isAdmin();
    }

    // === DEFAULT DENY ===
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
